<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:layout_gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatarItemImageView"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/avatar">
            </de.hdodenhof.circleimageview.CircleImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/avatarItemImageView">
                <TextView
                    android:id="@+id/repoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2222"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="30sp"/>
                <TextView
                    android:id="@+id/loginNameItemText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/repoName"
                    android:textColor="@color/black"
                    android:text="111">
                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/repoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="18sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/lightStarImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_lightstar"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/repoStars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_toRightOf="@id/lightStarImageView"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/lngImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_red"
                android:layout_marginStart="100dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/repoLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lngImageView"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/addCollectionCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="☆星标"
                android:textSize="18sp"
                android:textColor="@color/blue"
                android:padding="10dp"
                android:gravity="center"
                android:background="@drawable/border_button" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#F2EDED">
    </View>
</LinearLayout>